<li id="user-<%= user.id %>" class="media">

  <%= icon_for(user, { name: user.name, size: 64 }) %>

  <div class="media-body">

    <div class="name">
      <% if user.can_show?(current_user) %>
        <b><%= link_to user.name, user %></b>
      <% else %>
        <b><%= user.name %></b>
      <% end %>
      <%= badge(user) %>
    </div>

    <div class="outline">
      <%= user.outline %>
    </div>

    <span class="timestamp text-muted small">
      <%= timestamp(user) %>
    </span>

  </div>
</li>