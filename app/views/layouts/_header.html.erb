  <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">

    <%= link_to "memolet", root_path, id: "logo", class: "navbar-brand" %>

    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">

      <li class="nav-item"><%= link_to "Notes", notes_path, class: "nav-link" %></li>
