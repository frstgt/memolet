<header class="header">

  <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">

    <%= link_to app_name, root_path, id: "logo", class: "navbar-brand" %>
    <%= badge(Site.first) %>

    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
      <% if Site.first && Site.first.can_edit?(current_user) %>
        <li class="nav-item active dropdown">
          <a href="#" class="nav-link  dropdown-toggle" data-toggle="dropdown">
            Admin <b class="caret"></b>
          </a>
          <ul class="dropdown-menu dropdown-menu">
            <li><%= link_to "Site setting", edit_site_path(Site.first), class: "dropdown-item" %></li>
          </ul>
        </li>
      <% end %>
    </ul>

    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">

      <li class="nav-item"><%= link_to "Notes", notes_path, class: "nav-link" %></li>
      <li class="nav-item"><%= link_to "Users", users_path, class: "nav-link" %></li>

      <% if logged_in? %>

        <li class="nav-item dropdown">
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
            Account <b class="caret"></b>
          </a>
          <ul class="dropdown-menu dropdown-menu-right">
            <li><%= link_to "Home", current_user, class: "dropdown-item" %></li>
            <li class="dropdown-divider"></li>
            <li>
              <%= link_to "Log out", logout_path, method: :delete, class: "dropdown-item" %>
            </li>
          </ul>
        </li>

      <% else %>

        <li class="nav-item"><%= link_to "Log in", login_path, class: "nav-link" %></li>

      <% end %>

    </ul>
  </nav>

</header>