<li id="picture-<%= picture.id %>" class="media">

  <%= icon_for(picture, { name: picture.picture.url, size: 32 }) %>

  <div class="media-body">

    <div class="picture-url small">
      <% if picture.picture? %>
        <%= link_to "#{picture.picture.url}", picture.picture.url %>
      <% end %>
    </div>

    <div class="timestamp text-muted small">
      <%= timestamp(picture) %>
    </div>

    <span class="command">
      <%= link_to "[edit]", edit_note_picture_path(@note, picture) %>
      <%= link_to "[delete]", note_picture_path(@note, picture),
                              method: :delete, data: { confirm: "You sure?" } %>
    </span>

  </div>

</li>